<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="recipeuser">
	<insert id="add">
		INSERT INTO recipeuser 
		VALUES (#{userid}, #{userpw}, #{username}, #{nickname}, #{useremail}, #{usertel})
	</insert>
	
	<select id="item" resultType="RecipeUser">
		SELECT * FROM recipeuser
		WHERE userid=#{userid}
	</select>
	
	<update id="update">
		UPDATE recipeuser
		SET nickname=#{nickname}, useremail=#{useremail}, usertel=#{usertel}
		WHERE userid=#{userid}
	</update>
	
	<select id="findId" resultType="String">
		SELECT userid FROM recipeuser
		WHERE username=#{username} AND useremail=#{useremail}
	</select>
</mapper>