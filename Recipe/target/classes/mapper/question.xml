<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="question">
	<select id="list" resultType="question">
		SELECT * FROM question
	</select>
	<insert id="add" useGeneratedKeys="true" keyProperty="questionid">
		INSERT INTO question (questiontitle, questioncontent, ischecked, userid)
		VALUES (#{questiontitle}, #{questioncontent}, #{ischecked}, #{userid})
	</insert>
	
	<select id="item" resultType="Question">
		SELECT * FROM question
		WHERE questionid=#{questionid}
	</select>
</mapper>