<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="recipe">
	<select id="list" resultType="recipe">
		SELECT * FROM recipepost
	</select>
	<insert id="add">
		INSERT INTO recipepost
		VALUES (#{recipeid}, #{recipetitle}, #{recipewritedate}, #{recipefixdate}, #{recipeviews}, #{recommend}, #{isprivate}, #{isreport}, 
		#{writerid}, #{maincategoryid}, #{userid})
	</insert>
	
	<select id="item" resultType="Recipe">
		SELECT * FROM recipepost
		WHERE userid=#{userid}
	</select>
</mapper>